pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', daysToKeepStr: '2'))
    }

    triggers {
        cron('0 23 * * *')
    }

    stages {
        stage('Build') {
            steps {
                parallel linux: {
                    node('master') {
                        checkout scm
                        sh 'qmake src/ide.pro && make -j3'
                    }
                },
                windowsX86: {
                    node('windowsX86') {
                        checkout scm
                        bat '''
                            echo 'Setting up environment for Qt usage...'
                            set PATH=C:\\Qt\\5.9.1\\mingw53_32\\bin;C:\\Qt\\Tools\\mingw530_32\\bin;%PATH%
                            cd src
                            qmake ide.pro
                            make
                        '''
                    }
                },
                windowsX64: {
                    node('windowsX64') {
                        checkout scm
                        bat 'set'
                        bat '''
                            set ALLUSERSPROFILE=C:\ProgramData
                            set APPDATA=C:\Users\Alex\AppData\Roaming
                            set CommandPromptType=Native
                            set CommonProgramFiles=C:\Program Files\Common Files
                            set CommonProgramFiles(x86)=C:\Program Files (x86)\Common Files
                            set CommonProgramW6432=C:\Program Files\Common Files
                            set COMPUTERNAME=DESKTOP-8F8K9MO
                            set ComSpec=C:\WINDOWS\system32\cmd.exe
                            set FPS_BROWSER_APP_PROFILE_STRING=Internet Explorer
                            set FPS_BROWSER_USER_PROFILE_STRING=Default
