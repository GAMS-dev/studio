pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '10', daysToKeepStr: '2'))
    }

    triggers {
        cron('0 23 * * *')
    }

    stages {
        stage('Build') {
            steps {
                parallel linux: {
                    node('master') {
                        checkout scm
                        sh 'qmake src/ide.pro && make -j3'
                    }
                },
                windows: {
                    node('windows') {
                        //deleteDir()
                        checkout scm
                        //bat '''
                        //    cd src
                        //    qmake ide.pro
                        //    make -d
                        //'''
                    }
                },
                macos: {
                    node('macos') {
                        checkout scm
                        sh 'qmake src/ide.pro && make -j3'
                    }
                }
            }
        }
        stage('Pack') {
            steps {
                parallel linux: {
                    node('master') {
                        sh '''
                            echo 'TODO Pack on linux'
                        '''
                    }
                },
                windows: {
                    node('windows') {
                        bat '''
                            echo 'TODO Pack on windows'
                        '''
                    }
                },
                macos: {
                    node('macos') {
                        sh '''
                            echo 'TODO Pack on macos'
                        '''
                    }
                }
            }
        }
    }
}
