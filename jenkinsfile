pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', daysToKeepStr: '2'))
    }

    triggers {
        cron('0 23 * * *')
    }

    stages {
        stage('Build') {
            steps {
                parallel linux: {
                    node('master') {
                        step([$class: 'WsCleanup'])
                        checkout scm
                        sh '''
                            qmake src/studio.pro && make -j3
                        '''
                    }
                },
                windowsX86: {
                    node('windowsX86') {
                        step([$class: 'WsCleanup'])
                        checkout scm
                        bat '''
                            echo 'Setting up environment for Qt usage...'
                            set PATH=C:\\Qt\\5.9.1\\mingw53_32\\bin;C:\\Qt\\Tools\\mingw530_32\\bin;%PATH%
                            cd src
                            qmake studio.pro
                            make
                        '''
                    }
                },
                windowsX64: {
                    node('windowsX64') {
                        step([$class: 'WsCleanup'])
                        checkout scm
                        bat 'set'
                        bat '''
                            @echo off
                            echo Setting up environment for Qt usage...
                            set PATH=C:\\Qt\\5.9.1\\msvc2015_64\\bin;%PATH%
                            echo Setting up environment for VS2014 usage...
                            cd "C:\\Program Files (x86)\\Microsoft Visual Studio 14.0\\VC"
                            call vcvarsall.bat amd64
                            set
                            cd %WORKSPACE%\\src
                            qmake studio.pro "CONFIG+=release"
                            nmake
                        '''
                    }
                },
                macos: {
                    node('macos') {
                        step([$class: 'WsCleanup'])
                        checkout scm
                        sh 'qmake src/studio.pro && make -j3'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                parallel linux: {
                    node('master') {
                        sh '''
                            echo 'TODO Test on linux'
                        '''
                    }
                },
                windowsX86: {
                    node('windowsX86') {
                        bat '''
                            echo 'TODO Test on windowsX86'
                        '''
                    }
                },
                windowsX64: {
                    node('windowsX64') {
                        bat '''
                            echo 'TODO Test on windowsX64'
                        '''
                    }
                },
                macos: {
                    node('macos') {
                        sh '''
                            echo 'TODO Test on macos'
                        '''
                    }
                }
            }
        }
        stage('Pack') {
            steps {
                parallel linux: {
                    node('master') {
                        sh 'wget -c "https://github.com/probonopd/linuxdeployqt/releases/download/continuous/linuxdeployqt-continuous-x86_64.AppImage"'
                        sh '''
                            # create folder structure
                            mkdir -p appdir/usr/bin

                            # collect files
                            cp bin/studio appdir/usr/bin/
                            cp res/gamsstudio.desktop appdir/
                            cp src/icons/* appdir/
                            
                            chmod +x linuxdeployqt-continuous-x86_64.AppImage
                            ./linuxdeployqt-continuous-x86_64.AppImage appdir/usr/bin/studio -appimage -bundle-non-qt-libs
                        '''
                        script {
                            if (env.BRANCH_NAME != 'master') {
                                sh "mv GAMS_Studio-x86_64.AppImage ${env.BRANCH_NAME}-studio-x86_64.AppImage"
                            } else {
                                sh "mv GAMS_Studio-x86_64.AppImage studio-x86_64.AppImage"
                            }
                        }
                        archiveArtifacts artifacts: '*studio*', fingerprint: true
                    }
                },
                windowsX86: {
                    node('windowsX86') {
                        bat """
                            echo 'Setting up environment for Qt usage...'
                            set PATH=C:\\Qt\\5.9.1\\mingw53_32\\bin;C:\\Qt\\Tools\\mingw530_32\\bin;"C:\\Program Files\\7-Zip";%PATH%
                            cd src\\bin
                            windeployqt --release --compiler-runtime --force studio.exe
                            del *.zip
                            if "${env.BRANCH_NAME}"!="master" (
                                7z a -r ${env.BRANCH_NAME}-studio-x86.zip *
                            ) else (
                                7z a -r studio-x86.zip *
                            )
                        """
                        archiveArtifacts artifacts: '**/*.zip', fingerprint: true
                    }
                },
                windowsX64: {
                    node('windowsX64') {
                        bat """
                            echo 'Setting up environment for Qt usage...'
                            set PATH=C:\\Qt\\5.9.1\\msvc2015_64\\bin;"C:\\Program Files\\7-Zip";%PATH%
                            cd src\\bin
                            windeployqt --release --compiler-runtime --force studio.exe
                            del *.zip
                            if "${env.BRANCH_NAME}"!="master" (
                                7z a -r ${env.BRANCH_NAME}-studio-x64.zip *
                            ) else (
                                7z a -r studio-x86.zip *
                            )
                        """
                        archiveArtifacts artifacts: '**/*.zip', fingerprint: true
                    }
                },
                macos: {
                    node('macos') {
                        sh '''
                            cd bin
                            macdeployqt studio.app -dmg -always-overwrite
                        '''
                        script {
                            if ((env.BRANCH_NAME != 'master') {
                                sh "mv bin/studio.dmg ${env.BRANCH_NAME}-studio.dmg"
                            } else {
                                sh "mv bin/studio.dmg studio.dmg"
                            }
                        }
                        archiveArtifacts artifacts: '*.dmg', fingerprint: true
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                parallel linux: {
                    node('master') {
                        script {
                            if ((env.BRANCH_NAME == 'master')|(env.BRANCH_NAME == 'develop')) {
                               sh 'scp -o "BatchMode yes" *studio*.AppImage distrib@buildmeister.gams.com:./builds-page/ide'
                            } else {
                                echo "${env.BRANCH_NAME}"
                            }
                        }
                    }
                },
                windowsX86: {
                    node('windowsX86') {
                        bat """
                            echo 'Setting up environment for putty usage...'
                            set PATH=C:\\Users\\Alex\\Tools\\putty;%PATH%
                            set res=F
                            if "${env.BRANCH_NAME}"=="develop" (
                                pscp -i C:\\Users\\Alex\\Tools\\putty\\jwindeploy.ppk -hostkey 3e:2d:02:0c:74:70:42:f1:3f:0f:9c:4e:5f:ae:d7:9d -batch src\\bin\\${env.BRANCH_NAME}-studio-x86.zip distrib@buildmeister.gams.com:./builds-page/ide
                            )
                            if "${env.BRANCH_NAME}"=="master" (
                                pscp -i C:\\Users\\Alex\\Tools\\putty\\jwindeploy.ppk -hostkey 3e:2d:02:0c:74:70:42:f1:3f:0f:9c:4e:5f:ae:d7:9d -batch src\\bin\\studio-x86.zip distrib@buildmeister.gams.com:./builds-page/ide
                            )
                        """
                    }
                },
                windowsX64: {
                    node('windowsX64') {
                        bat """
                            echo 'Setting up environment for putty usage...'
                            set PATH=C:\\Users\\Alex\\Tools\\putty;%PATH%
                            set res=F
                            if "${env.BRANCH_NAME}"=="develop" set res=T
                            if "${env.BRANCH_NAME}"=="master" set res=T
                            if "${env.BRANCH_NAME}"=="develop" (
                                pscp -i C:\\Users\\Alex\\Tools\\putty\\jwindeploy.ppk -hostkey 3e:2d:02:0c:74:70:42:f1:3f:0f:9c:4e:5f:ae:d7:9d -batch src\\bin\\${env.BRANCH_NAME}-studio-x64.zip distrib@buildmeister.gams.com:./builds-page/ide
                            )
                            if "${env.BRANCH_NAME}"=="master" (
                                pscp -i C:\\Users\\Alex\\Tools\\putty\\jwindeploy.ppk -hostkey 3e:2d:02:0c:74:70:42:f1:3f:0f:9c:4e:5f:ae:d7:9d -batch src\\bin\\studio-x64.zip distrib@buildmeister.gams.com:./builds-page/ide
                            )
                        """
                    }
                },
                macos: {
                    node('macos') {
                        script {
                            if ((env.BRANCH_NAME == 'master')|(env.BRANCH_NAME == 'develop')) {
                               sh 'scp *.dmg distrib@buildmeister.gams.com:./builds-page/ide'
                            } else {
                                echo "${env.BRANCH_NAME}"
                            }
                        }
                    }
                }
            }
        }
    }
}
